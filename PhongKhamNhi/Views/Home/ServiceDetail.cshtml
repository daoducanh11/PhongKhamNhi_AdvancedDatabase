                    <h2 class="post-title h1">@Model.TenDV</h2>
                    <div class="post-content">
                        @Html.Raw(Model.MoTa)
                    </div>
                    <div class="post-tags">
                        <a href="#" class="tag-link">Dinh dưỡng</a>
                        <a href="#" class="tag-link">Hô hấp</a>
                        <a href="#" class="tag-link">Tai, mũi, họng</a>
                        <a href="#" class="tag-link">Mắt</a>
                        <a href="#" class="tag-link">Răng lợi</a>
                    </div>
                </article> <!-- .blog-details -->

                <div class="comment-form-wrap pt-5">
                    <h3 class="mb-5">Bình luận</h3>
                    <form action="#" class="">
                        <div class="form-row form-group">
                            <div class="col-md-6">
                                <label for="name">Tên *</label>
                                <input type="text" class="form-control" id="name">
                            </div>
                            <div class="col-md-6">
                                <label for="email">Email *</label>
                                <input type="email" class="form-control" id="email">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="website">Website</label>
                            <input type="url" class="form-control" id="website">
                        </div>

                        <div class="form-group">
                            <label for="message">Lời nhắn</label>
                            <textarea name="msg" id="message" cols="30" rows="8" class="form-control"></textarea>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Đăng bình luận" class="btn btn-primary">
                        </div>

                    </form>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="sidebar">
                    <div class="sidebar-block">
                        <h3 class="sidebar-title">Tìm kiếm</h3>
                        <form action="#" class="search-form">
                            <div class="form-group">
                                <input type="text" class="form-control" placeholder="Nhập từ khóa để tìm kiếm">
                                <button type="submit" class="btn"><span class="icon mai-search"></span></button>
                            </div>
