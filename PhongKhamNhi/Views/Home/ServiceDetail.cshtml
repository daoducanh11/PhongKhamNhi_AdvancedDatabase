@model PhongKhamNhi.Models.Entities.DichVuKham

@{
    ViewBag.Title = "ServiceDetail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-section pt-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <nav aria-label="Breadcrumb">
                    <ol class="breadcrumb bg-transparent py-0 mb-5">
                        <li class="breadcrumb-item"><a href="index.html">Trang chủ</a></li>
                        <li class="breadcrumb-item"><a href="blog.html">Dịch vụ khám</a></li>
                        <li class="breadcrumb-item active" aria-current="page">@Model.TenDV</li>
                    </ol>
                </nav>
            </div>
        </div> <!-- .row -->

        <div class="row">
            <div class="col-lg-8">
                <article class="blog-details">
                    <div class="post-thumb">
                        <img src="/Content/assets/img/blog/@Model.Anh" alt="">
                    </div>
                    @*<div class="post-meta">
                        <div class="post-author">
                            <span class="text-grey">By</span> <a href="#">Admin</a>
