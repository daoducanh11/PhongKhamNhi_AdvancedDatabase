@model PhongKhamNhi.Models.Entities.TaiKhoan

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>Login</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!--===============================================================================================-->
    <link rel="icon" type="image/png" href="~/Areas/Content/images/icons/favicon.ico" />
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Areas/Content/vendorLogin/bootstrap/css/bootstrap.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Areas/Content/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Areas/Content/vendorLogin/animate/animate.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Areas/Content/vendorLogin/css-hamburgers/hamburgers.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Areas/Content/vendorLogin/select2/select2.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Areas/Content/cssLogin/util.css">
    <link rel="stylesheet" type="text/css" href="~/Areas/Content/cssLogin/main.css">
</head>
<body>
    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100">
                <div class="login100-pic js-tilt" data-tilt>
                    <img src="~/Areas/Content/images/img-01.png" alt="IMG">
                </div>
                @using (Html.BeginForm("Index", "Login", FormMethod.Post, new { @class = "" }))
                {
                    <span class="login100-form-title">
                        Login
                    </span>
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, null, new { @class = "alert alert-danger" })
                    @* hien thi loi khi dang nhap sai *@
                    <div class="wrap-input100 validate-input" data-validate="UserName is required">
                        @Html.TextBoxFor(model => model.TenDangNhap, new { @class = "input100", @type = "text", @placeholder = "Tên đăng nhập", @required = "required" })
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <i class="fa fa-envelope" aria-hidden="true"></i>
                        </span>
                    </div>
                    <div class="wrap-input100 validate-input" data-validate="Password is required">
                        @Html.TextBoxFor(model => model.MatKhau, new { @class = "input100", @type = "password", @placeholder = "Mật khẩu", @required = "required" })
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <i class="fa fa-lock" aria-hidden="true"></i>
                        </span>
                    </div>
                    <div class="container-login100-form-btn">
                        <button type="submit" class="login100-form-btn">
                            Login
                        </button>
                    </div>
                    <div class="text-center p-t-12">
                        <span class="txt1">
                            Forgot
                        </span>
                        <a class="txt2" href="#">
                            Username / Password?
                        </a>
                    </div>
                    <div class="text-center p-t-136">
                        <a class="txt2" href="#">
                            Create your Account
                            <i class="fa fa-long-arrow-right m-l-5" aria-hidden="true"></i>
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
    <!--===============================================================================================-->
    <script src="~/Areas/Content/vendorLogin/jquery/jquery-3.2.1.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Areas/Content/vendorLogin/bootstrap/js/popper.js"></script>
    <script src="~/Areas/Content/vendorLogin/bootstrap/js/bootstrap.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Areas/Content/vendorLogin/select2/select2.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Areas/Content/vendorLogin/tilt/tilt.jquery.min.js"></script>
    <script>
        $('.js-tilt').tilt({
            scale: 1.1
        })
    </script>
    <!--===============================================================================================-->
    <script src="~/Areas/Content/jsLogin/main.js"></script>
</body>
</html>


