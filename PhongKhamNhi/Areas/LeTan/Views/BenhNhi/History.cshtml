@using PagedList.Mvc

@model PagedList.IPagedList<PhongKhamNhi.Models.Entities.PhieuKhamBenh>

@{
    ViewBag.Title = "History";
    Layout = "~/Areas/LeTan/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Lịch sử khám bệnh</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item">
                        @Html.ActionLink("Danh sách bệnh nhi", "Index", "BenhNhi")
                    </li>
                    <li class="breadcrumb-item active">Lịch sử khám bệnh</li>
                </ol>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="container-fluid card card-outline card-info">
        <label>Bệnh nhi: @ViewBag.ten</label>
        <table class="table">
            <thead>
                <tr>
                    <th class="text-center">Mã phiếu khám</th>
                    <th class="text-center">Thời gian khám</th>
                    <th class="text-center">Kết luận</th>
                    <th class="text-center">Chi tiết</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="text-center">
                            @Html.DisplayFor(modelItem => item.MaPhieuKB)
                        </td>
                        <td class="text-center">
                            @Html.DisplayFor(modelItem => item.ThoiGianLap)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.KetLuan)
                        </td>
                        <td class="text-center">
                            <a href="~/LeTan/PhieuKham/Detail/@item.MaPhieuKB" title="Chi tiết">
                                <i class="fas fa-edit" aria-hidden="true"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="row">
            <div class="col-md-12">
                @Html.PagedListPager(Model, PageNum => Url.Action("Index", new { PageNum }))
            </div>
        </div>    
    </div>
</section>