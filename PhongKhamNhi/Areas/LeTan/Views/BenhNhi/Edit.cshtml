@model PhongKhamNhi.Models.Entities.BenhNhi

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/LeTan/Views/Shared/_Layout.cshtml";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Thông tin bệnh nhi</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item">
                        @Html.ActionLink("Danh sách bệnh nhi", "Index", "BenhNhi")
                    </li>
                    <li class="breadcrumb-item active">Thông tin bệnh nhi</li>
                </ol>
            </div>
        </div>
    </div>
</section>

<!-- Main content -->
<section class="content">
    @using (Html.BeginForm("Edit", "BenhNhi", FormMethod.Post, new { }))
    {
        <div class="row">
            <div class="col-md-9">
                <div class="card card-outline card-info">
                    <div class="card-header">
                        <h4 class="">
                            Thông tin chính
                        </h4>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <div class="form-group row">
                            <label class="col-md-2">Họ tên bệnh nhi:</label>
                            <div class="col-md-5">
                                @Html.EditorFor(model => model.HoTen, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                                @Html.ValidationMessageFor(model => model.HoTen, "", new { @class = "text-danger" })
                                @Html.EditorFor(model => model.MaBN, new { htmlAttributes = new { @type = "hidden" } })
                            </div>
                            <label class="col-md-2 text-right">Ngày sinh:</label>
                            <div class="col-md-3">
                                <input class = "form-control" name="NgaySinh" value="@Model.NgaySinh.ToString("yyyy-MM-dd")" type="date" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-md-2">Giới tính:</label>
                            <div class="col-md-2">
                                <select class="form-control" name="gt">
                                    @if (Model.GioiTinh == "Nam")
                                    {
                                        <option selected value="Nam">Nam</option>
                                        <option value="Nữ">Nữ</option>
                                    }
                                    else
                                    {
                                        <option value="Nam">Nam</option>
                                        <option selected value="Nữ">Nữ</option>
                                    }
                                </select>
                            </div>
                            <label class="col-md-1 text-right">Địa chỉ:</label>
                            <div class="col-md-7">
                                @Html.EditorFor(model => model.DiaChi, new { htmlAttributes = new { @class = "form-control", @type = "text", @required = "required" } })
                                @Html.ValidationMessageFor(model => model.DiaChi, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-md-2">Ghi chú:</label>
                            <div class="col-md-10">
                                @Html.TextAreaFor(model => model.GhiChu, new { @class = "form-control", @rows = "3" })
                                @Html.ValidationMessageFor(model => model.GhiChu, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.col-->
            <div class="col-md-3">
                <div class="card card-outline card-info">
                    <div class="card-header">
                        <h4 class="">
                            Cập nhật
                        </h4>
                    </div>
                    <div class="card-body">
                        <div class="form-group">
                            <div class="row">
                                <div class="col-md-6">
                                    <button type="submit" id="Submit" name="Submit" class="btn btn-block btn-success btn-lg">
                                        <i class="ace-icon fa fa-check"></i>
                                        Cập nhật
                                    </button>
                                </div>
                                <div class="col-md-6">
                                    <button type="reset" class="btn btn-block btn-info btn-lg">
                                        <i class="fas fa-sync"></i>
                                        Nhập lại
                                    </button>
                                </div>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label>Tên thân nhân</label>
                            @Html.EditorFor(model => model.TenThanNhan, new { htmlAttributes = new { @class = "form-control", @type = "text", @required = "required", @min = @ViewBag.tgHenMin } })
                            @Html.ValidationMessageFor(model => model.TenThanNhan, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group row">
                            <label>Số điện thoại thân nhân</label>
                            @Html.EditorFor(model => model.SdtThanNhan, new { htmlAttributes = new { @class = "form-control", @type = "tel", @required = "required" } })
                            @Html.ValidationMessageFor(model => model.SdtThanNhan, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- ./row -->
    }
</section>