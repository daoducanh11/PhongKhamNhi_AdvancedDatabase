@model List<PhongKhamNhi.Models.DTO.KqXnDTO>

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/NvXn/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Chi tiết phiếu đăng ký xét nghiệm</h1>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="container-fluid card card-outline card-info">
        <h5 style="padding: 10px;">Bệnh nhi: @ViewBag.bn</h5>

        @using (Html.BeginForm("Edit", "NvXnHome", FormMethod.Post, new { }))
        {
            <input type="hidden" name="idP" value="@ViewBag.id" />
            <table class="table">
                <thead>
                    <tr>
                        <th class="text-center">
                            Tên xét nghiệm
                        </th>
                        <th class="text-center">
                            Trị số bình thường
                        </th>
                        <th class="text-center">
                            Đơn vị tính
                        </th>
                        <th class="text-center">
                            Kết quả
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.TenXN)
                            </td>
                            <td class="text-center">
                                @Html.DisplayFor(modelItem => item.TriSoBinhThuong)
                            </td>
                            <td class="text-center">
                                @Html.DisplayFor(modelItem => item.DonViTinh)
                            </td>
                            <td>
                                <input name="kq" class="form-control" value="@item.KetQua" />
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <div class="form-group">
                <div class="row">
                    <div class="col-md-4">

                    </div>
                    <div class="col-md-2">
                        <button type="submit" id="Submit" name="Submit" class="btn btn-block btn-success btn-lg">
                            <i class="ace-icon fa fa-check"></i>
                            Cập nhật
                        </button>
                    </div>
                    <div class="col-md-2">
                        <button type="reset" class="btn btn-block btn-info btn-lg">
                            <i class="fas fa-sync"></i>
                            Nhập lại
                        </button>
                    </div>
                    <div class="col-md-4">

                    </div>
                </div>
            </div>
        }
    </div>
</section>